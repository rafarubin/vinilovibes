<div class = "container mt-5">
  <h1>Mis compras</h1>
  <p><strong>Usuario: </strong><%= current_user.email %></p>
</div>

<div  class = "container mt-5">
  <% @product.each do |buy| %>
    <div class="card h-50">
      <p><strong><%= buy.name %></strong></p>
      <p><%= buy.artist %></p>
      <p><%= buy.category %></p>
      <p><%= buy.price %></p>
    </div>
  <% end %>
</div>
