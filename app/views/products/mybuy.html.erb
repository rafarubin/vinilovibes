<div class = "container mt-5"  style="max-width: 70%;">
  <h1>Mis Compras</h1>
  <p><strong>Usuario: </strong><%= current_user.email %></p>
</div>

<div  class = "container mt-5 text-justify product-background" style="max-width: 70%;">

  <% @product.each do |buy| %>
    <div class="card w-20 mb-4" style="border-radius: 15px; padding: 20px;">
      <h3><strong><%= buy.name %></strong></h3>
      <p><strong>Artista</strong>: <%= buy.artist %></p>
      <p><strong>Categor√≠a</strong>: <%= buy.category %></p>
      <p><strong>Precio ($)</strong>: <strong><%= buy.price %></strong></p>
      <div>
        <div class="card" style="width: 19rem;">
            <div class="card-header" style="background-color: #92C7CF; color: #333;">
              <strong>COMPRADO</strong>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Fecha de Compra: <%= @purchase.find_by(product_id: buy.id).updated_at.in_time_zone('America/Lima').strftime("%d/%m/%Y %H:%M") %></li>
            </ul>
          </div>
      </div>
    </div>
  <% end %>
</div>

