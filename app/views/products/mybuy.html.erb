<div class = "container mt-5"  style="max-width: 60%;">
  <h1>Mis Compras</h1>
  <p><strong>Usuario: </strong><%= current_user.email %></p>
</div>

<div  class = "container mt-5" style="max-width: 60%;">
  <% @product.each do |buy| %>
    <div class="card h-50">
      <p><strong><%= buy.name %></strong></p>
      <p><%= buy.artist %></p>
      <p><%= buy.category %></p>
      <p><%= buy.price %></p>
      <div class="d-inline-flex">
        <div class="card" style="width: 19rem;">
            <div class="card-header">
              <strong>COMPRADO</strong>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Fecha de venta: <%= @purchase.find_by(product_id: buy.id).updated_at.in_time_zone('America/Lima').strftime("%d/%m/%Y %H:%M") %></li>
            </ul>
          </div>
      </div>
    </div>
  <% end %>
</div>
