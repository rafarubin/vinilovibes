
<h1>Vinilo vibes</h1>




<h3>Vinilos en venta</h3>

<% if user_signed_in?%>
<%= link_to "Agrega un nuevo producto", new_product_path %>
<% end%>


<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @products.each do |product| %>
      <div class="col">
        <div class="card h-100">
          <img src="" class="card-img-top" alt="">
            <div class="card-body">
              <%= link_to(product) do %>
                <h5 class="card-title"><%= product.name %></h5>
              <% end %>
              <p class="card-text">Artista: <%=product.artist %> <br>
                                  Categor√≠a: <%= product.category %>
              </p>
            </div>
            <div class="card-footer">
            <small class="text-muted">Precio: $ <%= product.price %> </small>
              <%= link_to "Comprar", product_purchases_path(:user_id => @user, :product_id => product.id ), method: "post" %>
          </div>
        </div>
      </div>
  <% end %>
</div>
